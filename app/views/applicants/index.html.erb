<h1>Listing applicants</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Ssn</th>
      <th>Group</th>
      <th>Group</th>
      <th>Address 1</th>
      <th>String</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Home phone</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= applicant.first_name %></td>
        <td><%= applicant.middle_name %></td>
        <td><%= applicant.last_name %></td>
        <td><%= applicant.ssn %></td>
        <td><%= applicant.group %></td>
        <td><%= applicant.group_id %></td>
        <td><%= applicant.address_1 %></td>
        <td><%= applicant.string %></td>
        <td><%= applicant.address_2 %></td>
        <td><%= applicant.city %></td>
        <td><%= applicant.state %></td>
        <td><%= applicant.zip %></td>
        <td><%= applicant.home_phone %></td>
        <td><%= applicant.date_of_birth %></td>
        <td><%= applicant.gender %></td>
        <td><%= link_to 'Show', applicant %></td>
        <td><%= link_to 'Edit', edit_applicant_path(applicant) %></td>
        <td><%= link_to 'Destroy', applicant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

